    "version": "0.2.0",
    "configurations": [
        {
            "name": "API",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "args": [
                "run",
                "--port",
                "5000",
                "--host",
                "0.0.0.0",
            ],
            "env": {
                "FLASK_APP":"api"
            },
            "cwd": "${workspaceFolder}/api/src",
            "jinja": false,
             "console": "integratedTerminal",
            "stopOnEntry": true,
            "justMyCode": false
        },
        {
            "name": "APITest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-s",
                "-vv",
            ],
            "cwd": "${workspaceFolder}/api",
            "jinja": false,
             "console": "integratedTerminal",
            "stopOnEntry": true,
            "justMyCode": false
        },
        {
            "name": "UI",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "args": [
                "run",
                "--port",
                "8080",
                "--host",
                "0.0.0.0",
            ],
            "env": {
                "FLASK_APP":"ui"
            },
            "cwd": "${workspaceFolder}/ui/src",
            "jinja": false,
             "console": "integratedTerminal",
            "stopOnEntry": true,
            "justMyCode": false
        },
    ],
    "python.pythonPath": "venv/bin/python3"
}
