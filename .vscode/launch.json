    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Server",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "args": [
                "run",
                "--port",
                "8080",
                "--host",
                "0.0.0.0",
                // "--no-debugger",
                // "--no-reload"
            ],
            "env": {
                "FLASK_APP":"ui"
            },
            "cwd": "${workspaceFolder}/ui/src",
            "jinja": false,
             "console": "integratedTerminal",
            "stopOnEntry": true,
            "justMyCode": false
        },
    ],
    "python.pythonPath": "venv/bin/python3"
}